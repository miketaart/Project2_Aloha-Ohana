{{#if guide}}
<img src="{{tour.image}}" alt="">
<h3>{{tour.title}}</h3>
<h5>Duration: approximately {{tour.duration}} hour(s)</h5>
<h5>Guide name: {{tour.guide_name}}</h5>
<h5>City: {{tour.city}}</h5>
<h6>Summary: {{tour.description}}</h6>
{{else }}
<img src="{{tour.image}}" alt="">
<h3>{{tour.title}}</h3>
<h5>Duration: approximately {{tour.duration}} hour(s)</h5>
<h5>Guide name: {{tour.guide_name}}</h5>
<h5>City: {{tour.city}}</h5>
<h6>Summary: {{tour.description}}</h6>
<a href="/guide/tours/edit/{{tour.id}}">Edit tour</a>

<form action="/tour/add" method="POST"></form>
<input type="number" required name="purchased_tours" placeholder="how often?">
<button type="submit">Add!</button>
</form>
{{/if}}

